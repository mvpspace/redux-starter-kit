{
  "name": "Basic",
  "version": "0.0.1",
  "description": "Basic Meteor app.",
  "private": true,
  "scripts": {
    "start": "meteor run --allow-superuser --unsafe-perm --settings ./.config/development/settings.json --port 3000",
    "mongo": "MONGO_URL=mongodb://172.17.0.2:27017/redux-starter-kit meteor run --allow-superuser --unsafe-perm --settings ./.config/development/settings.json --port 3000",
    "mongo-oplog": "MONGO_URL=mongodb://localhost:27017/redux-starter-kit MONGO_OPLOG_URL=mongodb://localhost:27017/local meteor run --allow-superuser --unsafe-perm --settings ./.config/development/settings.json --port 3333"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-stage-0": "^6.5.0",
    "babel-root-slash-import": "^1.1.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.1",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^ 6.8.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "classes": true,
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react",
      "import"
    ],
    "extends": [
      "airbnb/base",
      "plugin:meteor/guide",
      "plugin:react/recommended"
    ],
    "globals": {
      "server": false,
      "browser": false
    },
    "rules": {
      "import/prefer-default-export": 0,
      "import/no-extraneous-dependencies": 0,
      "import/imports-first": 0,
      "import/no-unresolved": 0,
      "object-shorthand": 0,
      "block-spacing": 2,
      "arrow-spacing": 2,
      "semi": [
        2,
        "never"
      ],
      "import/default": 2,
      "import/export": 2,
      "import/no-mutable-exports": 2,
      "react/no-render-return-value": 0,
      "array-bracket-spacing": [
        2,
        "never"
      ],
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        2,
        "never-multiline"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@blueprintjs/core": "1.2.0",
    "bcrypt": "^1.0.0",
    "classnames": "^2.2.5",
    "react": "^15.3.1",
    "react-addons-pure-render-mixin": "^15.3.1",
    "react-addons-update": "^15.3.1",
    "react-datetime": "^2.5.0",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.0",
    "react-router-redux": "4.0.7",
    "react-select": "^1.0.0-beta14",
    "react-tag-input": "^4.6.1",
    "react-tap-event-plugin": "2.0.1",
    "react-textarea-autosize": "^4.0.5",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "reflexbox": "2.2.3",
    "slug": "^0.9.1",
    "underscore": "^1.8.3",
    "uniforms": "^1.7.1",
    "uniforms-unstyled": "^1.7.1"
  }
}
